{# Purpose of this template: Display one certain entry within an external context #}
<div id="entry{{ entry.getKey() }}" class="mueternizermodule-external-entry">
{% if displayMode == 'link' %}
    <p class="mueternizermodule-external-link">
    <a href="{{ path('mueternizermodule_entry_display', {'id': entry.getId()}) }}" title="{{ entry|mueternizermodule_formattedTitle|e('html_attr') }}">
    {{ entry|mueternizermodule_formattedTitle|notifyFilters('eternizer.filter_hooks.entries.filter')|safeHtml }}
    </a>
    </p>
{% endif %}
{% if hasPermission('MUEternizerModule::', '::', 'ACCESS_EDIT') %}
    {# for normal users without edit permission show only the actual file per default #}
    {% if displayMode == 'embed' %}
        <p class="mueternizermodule-external-title">
            <strong>{{ entry|mueternizermodule_formattedTitle|notifyFilters('eternizer.filter_hooks.entries.filter')|safeHtml }}</strong>
        </p>
    {% endif %}
{% endif %}

{% if displayMode == 'link' %}
{% elseif displayMode == 'embed' %}
    <div class="mueternizermodule-external-snippet">
        &nbsp;
    </div>

    {# you can distinguish the context like this: #}
    {# % if source == 'block' %}
        ... detail block
    {% elseif source == 'contentType' %}
        ... detail content type
    {% elseif source == 'scribite' %}
        ...
    {% endif % #}

    {# you can enable more details about the item: #}
    {#
        <p class="mueternizermodule-external-description">
            {% if entry.text is not empty %}{{ entry.text }}<br />{% endif %}
        </p>
    #}
{% endif %}
</div>

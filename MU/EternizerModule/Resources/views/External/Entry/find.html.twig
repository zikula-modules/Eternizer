{# Purpose of this template: Display a popup selector of entries for scribite integration #}
{% set useFinder = true %}
{% extends 'MUEternizerModule::raw.html.twig' %}
{% block title __('Search and select entry') %}
{% block content %}
    <div class="container">
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
            {% set activatedObjectTypes = getModVar('MUEternizerModule', 'enabledFinderTypes', []) %}
            {% if 'entry' in activatedObjectTypes %}
                <li{{ objectType == 'entry' ? ' class="active"' : '' }}><a href="{{ path('mueternizermodule_external_finder', {objectType: 'entry', editor: editorName}) }}" title="{{ __('Search and select entry') }}">{{ __('Entries') }}</a></li>
            {% endif %}
            </ul>
        </div>
        {% form_theme finderForm with [
            '@MUEternizerModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: {id: 'mUEternizerModuleSelectorForm'}}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select entry') }}</legend>
            {{ form_row(finderForm.pasteAs) }}
            <br />
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Entry') }}:</label>
                <div class="col-sm-9">
                    <div id="mueternizermoduleItemContainer">
                        <ul>
                            {% for entry in items %}
                                <li>
                                    {% set itemId = entry.getKey() %}
                                    <a href="#" data-itemid="{{ itemId }}">
                                        {{ entry|mueternizermodule_formattedTitle }}
                                    </a>
                                    <input type="hidden" id="path{{ itemId }}" value="{{ path('mueternizermodule_entry_display', {'id': entry.getId()}) }}" />
                                    <input type="hidden" id="url{{ itemId }}" value="{{ url('mueternizermodule_entry_display', {'id': entry.getId()}) }}" />
                                    <input type="hidden" id="title{{ itemId }}" value="{{ entry|mueternizermodule_formattedTitle|e('html_attr') }}" />
                                    <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if entry.text is not empty %}{{ entry.text }}{% endif %}
                                    {% endset %}{{ description|striptags|e('html_attr') }}" />
                                </li>
                            {% else %}
                                <li>{{ __('No entries found.') }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            {{ form_row(finderForm.q) }}
            <div>
                {{ pager({display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'mueternizermodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    {#
    <div class="mueternizermodule-finderform">
        <fieldset>
            {{ render(controller('MUEternizerModule:Entry:edit')) }}
        </fieldset>
    </div>
    #}
{% endblock %}

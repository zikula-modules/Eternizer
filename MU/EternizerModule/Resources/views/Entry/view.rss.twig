{# purpose of this template: entries rss feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<rss version="2.0"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:admin="http://webns.net/mvcb/"
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
    xmlns:atom="http://www.w3.org/2005/Atom">
{#<rss version="0.92">#}
    <channel>
        <title>{{ __('Latest entries') }}</title>
        <link>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}</link>
        <atom:link href="{{ app.request.schemeAndHttpHost ~ app.request.basePath ~ app.request.pathInfo }}" rel="self" type="application/rss+xml" />
        <description>{{ __('A direct feed showing the list of entries') }} - {{ getModVar('ZConfig', 'slogan') }}</description>
        <language>{{ app.request.locale }}</language>
        {# commented out as imagepath is not defined and we can't know whether this logo exists or not
        <image>
            <title>{{ getModVar('ZConfig', 'sitename') }}</title>
            <url>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}{{ imagepath }}/logo.jpg</url>
            <link>{{ app.request.schemeAndHttpHost ~ app.request.basePath }}</link>
        </image>
        #}
        <docs>http://blogs.law.harvard.edu/tech/rss</docs>
        <copyright>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.schemeAndHttpHost }}</copyright>
        <webMaster>{{ pageGetVar('adminmail') }}</webMaster>
{% for entry in items %}
    <item>
        <title><![CDATA[{% if entry.updatedDate|default %}{{ entry.updatedDate|localizeddate('medium', 'short') }} - {% endif %}{{ entry|mueternizermodule_formattedTitle|notifyFilters('mueternizermodule.filterhook.entries')|safeHtml }}]]></title>
        <link>{{ url('mueternizermodule_entry_' ~ routeArea ~ 'display', {'id': entry.getId()}) }}</link>
        <guid>{{ url('mueternizermodule_entry_' ~ routeArea ~ 'display', {'id': entry.getId()}) }}</guid>
        {% if entry.createdBy|default and entry.createdBy.getUid() > 0 %}
            {% set creatorAttributes = entry.createdBy.getAttributes() %}
            <author>{{ entry.createdBy.getEmail() }} ({{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(entry.createdBy.getUname()) }})</author>
        {% endif %}
        <description>
            <![CDATA[
            {{ entry.text|replace({'<br>': '<br />'}) }}
            ]]>
        </description>
        {% if entry.createdDate|default %}
            <pubDate>{{ entry.createdDate|date('r') }}</pubDate>
        {% endif %}
    </item>
{% endfor %}
    </channel>
</rss>

{# Purpose of this template: Display entries within an external context #}
<dl>
    {% for entry in items %}
        <dt>{{ entry|mueternizermodule_formattedTitle }}</dt>
        {% if entry.text %}
            <dd>{{ entry.text|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('mueternizermodule_entry_display', {'id': entry.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>

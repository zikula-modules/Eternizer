{# purpose of this template: module configuration page #}
{% extends 'MUEternizerModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="mueternizermodule-config">
        {% form_theme form with [
            '@MUEternizerModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <ul class="nav nav-pills">
        {% set tabTitle = __('Variables') %}
        <li class="active" data-toggle="pill"><a href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a></li>
        {% set tabTitle = __('Moderation') %}
        <li data-toggle="pill"><a href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a></li>
        </ul>

        {{ form_errors(form) }}
        <div class="tab-content">
            {% set tabTitle = __('Variables') %}
            <div role="tabpanel" class="tab-pane fade in active" id="tab1">
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('Here you can manage all basic settings for this application.') }}</p>
                
                    {{ form_row(form.pagesize) }}
                    {{ form_row(form.mail) }}
                    {{ form_row(form.order) }}
                    {{ form_row(form.moderate) }}
                    {{ form_row(form.formposition) }}
                    {{ form_row(form.ipsave) }}
                    {{ form_row(form.editentries) }}
                    {{ form_row(form.period) }}
                    {{ form_row(form.simplecaptcha) }}
                </fieldset>
            </div>
            {% set tabTitle = __('Moderation') %}
            <div role="tabpanel" class="tab-pane fade" id="tab2">
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('Here you can assign moderation groups for enhanced workflow actions.')|nl2br }}</p>
                
                    {{ form_row(form.moderationGroupForEntries) }}
                </fieldset>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{# purpose of this template: entries list view #}
{% extends routeArea == 'admin' ? 'MUEternizerModule::adminBase.html.twig' : 'MUEternizerModule::base.html.twig' %}
{% block title __('Entry list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="mueternizermodule-entry mueternizermodule-view">

{% if routeArea != 'admin' %}
<div id="eternizer">
{#{ callFunc('MUEternizerModule', 'type' => 'user') }#}
{% for entry in items %}
        <div class="etz_entry z-clearfix {{ cycle (['etz_bg1','etz_bg2'], loop.index0) }}">
            <div class="col-md-4 etz_author">
                <div class="etz_avatar">{{ mueternizermodule_userAvatar(uid=entry.updatedUserId, rating='g') }}</div>
                {% if entry.email is not empty or entry.homepage is not empty or entry.location is not empty %}
                    <dl class="etz_options">
                        {% if entry.email is not empty %}
                            <dt>{{ __('Email') }}</dt>
                            <dd>
                                <a href="mailto:{{ entry.email|protectMail }}" title="{{ __('Send an email') }}" class="fa fa-envelope"></a>
                            </dd>
                        {% endif %}
                        {% if entry.homepage is not empty %}
                            <dt>{{ __('Homepage') }}</dt>
                            <dd>
                                <a href="{{ entry.homepage }}" title="{{ __('Visit this page') }}" class="fa fa-external-link-square"></a>
                            </dd>
                        {% endif %}
                        {% if entry.location is not empty %}
                            <dt>{{ __('Location') }}</dt>
                            <dd>{{ entry.location|safeHtml }}</dd>
                        {% endif %}
                    </dl>
                {% endif %}
            </div>
            <div class="col-md-8 etz_body">
                <div class="etz_info">
                    <div class="etz_title">
                        <div class="etz_name">
                            {% if entry.name is not empty %}
                                <span class="etz_attr">{{ entry.name|safeHtml }}</span>
                            {% else %}
							{% set guest = getModVar('ZikulaUsersModule', 'anonymous') %}
							{% set ownerName = mueternizermodule_userVar('uname', entry.createdUserId) %}
                                {% if ownerName is empty %}							
                                    {{ guest|safeHtml }}
                                {% else %}
                                    {% if ownerName is not empty %}
                                        {{ ownerName|safeHtml }}
                                     {% else %}
                                        {{ guest|safeHtml }}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
							{{ __f('created on %s', {'%s': entry.createdDate|date("d.m.Y")}) }}
                        </div>
                    </div>
                    <div class="etz_action">
                        {#% if actionLinks|length > 0 %}
                            {% if entry.createdUserId == userid and coredata.logged_in == true and editentries == 1 %}
                            <div class="eternizer-user-entry-edit">{{ entry.id|mueternizerGetStateOfEditOfEntry }}</div>
                               {% strip %}
                                    {% for option in actionLinks %}
                                        <a href="{{ option.url }}" title="{{ option.linkTitle|e('html_attr') }}" role="menuitem" tabindex="-1" class="fa fa-{{ option.icon }}">{{ option.linkText }}</a>
                                    {% endfor %}
                                {% strip %} }
                            {% endif %}
                        {% endif %#}
                    </div>
                </div>
                <div class="etz_content">
				     {{ entry.text }}
                    {#{ entry.text|notifyFilters:'eternizer.filter_hooks.entries.filter'|safeHtml|nl2br }#}
                    {% if entry.notes is not empty %}
                        {% if entry.updatedUserId == entry.createdUserId %}
                        <p style="margin-top: 2em;" class="entry-comment">
                            <strong class="entry-comment-label">{{ __('Comment:') }}</strong>
                            <br/>
                            {{ entry.notes|safeHtml }}
                        </p>
                        {% endif %}
                    {% endif %}
                    {% if entry.updatedDate > entry.createdDate and entry.createdUserId == entry.updatedUserId %}
                        <br/>
                        <span class="etz_updated">{{ __f('Updated on %s', {'%s': entry.updatedDate|date("d.m.Y")}) }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
        <tr class="z-datatableempty">
            <td class="z-left" colspan="9">{{ __('No entries found.') }}</td>
        </tr>
		{% endfor %}
		</div>
		{% endif %}
		
    {% if routeArea == 'admin' %}
    {{ block('page_nav_links') }}

    {{ include('@MUEternizerModule/Entry/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('mueternizermodule_entry_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="entriesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cIp" />
                <col id="cName" />
                <col id="cEmail" />
                <col id="cHomepage" />
                <col id="cLocation" />
                <col id="cText" />
                <col id="cNotes" />
                <col id="cItemActions" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center">
                        <input type="checkbox" id="toggleEntries" />
                    </th>
                {% endif %}
                <th id="hIp" scope="col" class="text-left">
                    <a href="{{ sort.ip.url }}" title="{{ __f('Sort by %s', {'%s': 'ip'}) }}" class="{{ sort.ip.class }}">{{ __('Ip') }}</a>
                </th>
                <th id="hName" scope="col" class="text-left">
                    <a href="{{ sort.name.url }}" title="{{ __f('Sort by %s', {'%s': 'name'}) }}" class="{{ sort.name.class }}">{{ __('Name') }}</a>
                </th>
                <th id="hEmail" scope="col" class="text-left">
                    <a href="{{ sort.email.url }}" title="{{ __f('Sort by %s', {'%s': 'email'}) }}" class="{{ sort.email.class }}">{{ __('Email') }}</a>
                </th>
                <th id="hHomepage" scope="col" class="text-left">
                    <a href="{{ sort.homepage.url }}" title="{{ __f('Sort by %s', {'%s': 'homepage'}) }}" class="{{ sort.homepage.class }}">{{ __('Homepage') }}</a>
                </th>
                <th id="hLocation" scope="col" class="text-left">
                    <a href="{{ sort.location.url }}" title="{{ __f('Sort by %s', {'%s': 'location'}) }}" class="{{ sort.location.class }}">{{ __('Location') }}</a>
                </th>
                <th id="hText" scope="col" class="text-left">
                    <a href="{{ sort.text.url }}" title="{{ __f('Sort by %s', {'%s': 'text'}) }}" class="{{ sort.text.class }}">{{ __('Text') }}</a>
                </th>
                <th id="hNotes" scope="col" class="text-left">
                    <a href="{{ sort.notes.url }}" title="{{ __f('Sort by %s', {'%s': 'notes'}) }}" class="{{ sort.notes.class }}">{{ __('Notes') }}</a>
                </th>
                <th id="hItemActions" scope="col" class="z-order-unsorted">{{ __('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
        
        {% for entry in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center">
                        <input type="checkbox" name="items[]" value="{{ entry.id }}" class="entries-checkbox" />
                    </td>
                {% endif %}
                <td headers="hIp" class="text-left">
                    {{ entry.ip }}
                </td>
                <td headers="hName" class="text-left">
                    <a href="{{ path('mueternizermodule_entry_' ~ routeArea ~ 'display', { 'id': entry.id }) }}" title="{{ __('View detail page')|e('html_attr') }}">{{ entry.name|notifyFilters('mueternizermodule.filterhook.entries') }}</a>
                </td>
                <td headers="hEmail" class="text-left">
                    {% if entry.email is not empty %}
                    <a href="mailto:{{ entry.email|protectMail }}" title="{{ __('Send an email') }}" class="fa fa-envelope"></a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hHomepage" class="text-left">
                    {% if entry.homepage is not empty %}
                    <a href="{{ entry.homepage }}" title="{{ __('Visit this page') }}" class="fa fa-external-link-square"></a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hLocation" class="text-left">
                    {{ entry.location }}
                </td>
                <td headers="hText" class="text-left">
                    {{ entry.text|safeHtml }}
                </td>
                <td headers="hNotes" class="text-left">
                    {{ entry.notes|safeHtml }}
                </td>
                <td id="itemActions{{ entry.id }}" headers="hItemActions" class="actions nowrap z-w02">
                    {% set actionLinks = mueternizermodule_actions(entity=entry, area=routeArea, context='view') %}
                    {% if actionLinks|length > 0 %}
                        <div class="dropdown">
                            <a id="itemActions{{ entry.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                            
                            <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="itemActions{{ entry.id }}DropDownToggle">
                                {% for option in actionLinks %}
                                    <li role="presentation"><a href="{{ option.url }}" title="{{ option.linkTitle|e('html_attr') }}" role="menuitem" tabindex="-1" class="fa fa-{{ option.icon }}">{{ option.linkText }}</a></li>
                                    
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}9{% else %}8{% endif %}">
            {{ __('No entries found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
		{% endif %}
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.numitems, limit: pager.itemsperpage, display: 'page', route: 'mueternizermodule_entry_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUEternizerModuleAction" class="col-sm-3 control-label">{{ __('With selected entries') }}</label>
                <div class="col-sm-6">
                    <select id="mUEternizerModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    {% if canBeCreated %}
        {% if hasPermission('MUEternizerModule:Entry:', '::', 'ACCESS_EDIT') %}
            {% set createTitle = __('Create entry') %}
            <a href="{{ path('mueternizermodule_entry_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        {% endif %}
    {% endif %}
    {% if showAllEntries == 1 %}
        {% set linkTitle = __('Back to paginated view') %}
        <a href="{{ path('mueternizermodule_entry_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% else %}
        {% set linkTitle = __('Show all entries') %}
        <a href="{{ path('mueternizermodule_entry_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% endif %}
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='mueternizermodule.ui_hooks.entries.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
{% block footer %}
    {{ parent() }}

<script type="text/javascript">
/* <![CDATA[ */
    ( function($) {
        $(document).ready(function() {
            $('.dropdown-toggle').dropdown();
            $('a.fa-zoom-in').attr('target', '_blank');
            {% if routeArea == 'admin' %}
                {# init the "toggle all" functionality #}
                if ($('#toggleEntries').length > 0) {
                    $('#toggleEntries').click(function (event) {
                        $('entries-checkbox').prop('checked', $(this).prop('checked'));
                    });
                }
            {% endif %}
        });
    })(jQuery);
/* ]]> */
</script>
{% endblock %}
